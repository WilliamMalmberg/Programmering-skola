package com.studentCode;

public class A2 {

	public static void main(String[] args) {
		String firstName = args[0].toLowerCase().replace('ö', 'o').replace('ä', 'a').replace('å', 'a');
		String lastName = args[1].toLowerCase().replace('ö', 'o').replace('ä', 'a').replace('å', 'a');
		String admissionYear = args[2].toLowerCase();
                String firstNameTemp = "";
                String lastNameTemp = "";
                String Year = "";
           
		if(firstName.length() > 2 && lastName.length() > 2 && admissionYear.length() == 4){
              
           


                for(int i = 0; i < 3; i++){
                 firstNameTemp += firstName.charAt(i);
                }


                for(int i = 0; i < 3; i++){
                lastNameTemp += lastName.charAt(i);
                }
                for (int i = 2; i < 4; i++) {
                
                Year += admissionYear.charAt(i);
                }

 
		
                String userName = "" + firstNameTemp + lastNameTemp + Year;
             
		String email = userName + "@student.hh.se";
              

		// WARNING! Do not change these lines. Use exactly these strings as your output.

		System.out.println("Username: " + userName);
		System.out.println("E-mail: " + email);
               }  else {System.out.println("Names need atleast 3 letters, and the year has to be 4 digits");
               }

        
     }
}
